pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'hello world from build'
            }
        }
        stage('Test') {
            steps {
                echo 'hello world from test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'hello world from Deploy'
            }
        }
    }

    post { 
        always { 
            echo 'I will always say Hello again!'  // this always executes if pipeline fail or success.
        }

        failure {
            echo 'I willsay Hello if pipeline fail!'  // this will executes if pipeline fail
        }

        success {
            echo 'I willsay Hello if pipeline success!'  // this will executes if pipeline success
        }


    }
}
